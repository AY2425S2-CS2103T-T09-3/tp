@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyGastroBook" as ReadOnlyGastroBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class GastroBook
Class ModelManager
Class UserPrefs

Class UniqueReservationList
Class Reservation
Class StartDate
Class StartTime
Class Pax
Class Identification
Class Name
Class Phone
Class Tag
Class Duration
Class Table

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

GastroBook .up.|> ReadOnlyGastroBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyGastroBook
ModelManager -left-> "1" GastroBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

'change AddressBook to GastroBook
GastroBook *--> "1" UniqueReservationList
UniqueReservationList --> "~* all" Reservation
Reservation --> Name
Reservation --> Phone
Reservation --> StartDate
Reservation --> StartTime
Reservation --> Duration
Reservation --> Table
Reservation --> Pax
Reservation *--> Identification
Reservation --> "*" Tag

Reservation -[hidden]up--> I
UniqueReservationList -[hidden]right-> I

Name -[hidden]right-> Phone
'Phone -[hidden]right-> Address'
'Address -[hidden]right-> Email

ModelManager --> "~* filtered" Reservation
@enduml
